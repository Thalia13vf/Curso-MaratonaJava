package br.com.abc.javacore.metodo.classes;

public class Estudante 
{
	public String nome;
	public int idade;
	public double[] notas;
	
	private double media(double[] notas) 
	{
		double media = 0;
		for(double nota : notas) 
		{
			media += nota; 
		}
		media  = media / notas.length;
		return media;
	}
	
	private String status(double media) 
	{
		String status;
		if(media > 6) 
		{
			status = "Aprovado";
		}
		else 
		{
			status = "Reprovado";
		}
		return status;
	}
	private boolean notasNull() 
	{
		if(notas.length == 0) 
		{
			return true;
		}
		return true;
	}
	public void imprime() 
	{
		if(this.notasNull() == true) 
		{
			System.out.println("O aluno não possui notas!");
		}
		else 
		{
			System.out.println("Nome: " + this.nome);
			System.out.println("Idade: " + this.idade + " anos");
			for(double nota :  notas) 
			{
				System.out.print(nota + " ");
			}
			System.out.printf("\nMédia: %.2f\n" , this.media(notas));
			System.out.println("Situação: " + this.status(this.media(notas)));
		}	
	}
}
